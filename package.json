{
	"name": "shop",
	"version": "0.0.1",
	"scripts": {
		"dev": "concurrently \"vite dev\" \"pnpm gen:watch\"",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"generate": "graphql-codegen && houdini generate",
		"gen:watch": "graphql-codegen --watch",
		"test": "pnpm test:pushdb && vitest",
		"test:pushdb": "DATABASE_URL=file:./dev_test.db pnpm exec prisma db push",
		"test:watchschema": "npm-watch",
		"coverage": "vitest run --coverage"
	},
	"watch": {
		"test": "**/*/schema.prisma"
	},
	"devDependencies": {
		"@graphql-codegen/add": "^3.1.1",
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/graphql-modules-preset": "^2.3.11",
		"@graphql-codegen/typed-document-node": "^2.2.11",
		"@graphql-codegen/typescript": "^2.4.11",
		"@graphql-codegen/typescript-document-nodes": "^2.2.11",
		"@graphql-codegen/typescript-operations": "^2.4.0",
		"@graphql-codegen/typescript-resolvers": "^2.6.4",
		"@kitql/client": "^0.5.3",
		"@kitql/graphql-codegen": "^0.5.1",
		"@kitql/vite-plugin-watch-and-run": "^0.3.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@testing-library/svelte": "^3.1.2",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.5.1",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"c8": "^7.11.3",
		"concurrently": "^7.2.1",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"nodemon": "^2.0.16",
		"npm-watch": "^0.11.0",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"reflect-metadata": "^0.1.13",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2",
		"vite": "^2.9.13",
		"vitest": "^0.12.9"
	},
	"type": "module",
	"dependencies": {
		"@envelop/core": "^2.3.2",
		"@envelop/graphql-jit": "^4.2.2",
		"@envelop/graphql-modules": "^3.3.2",
		"@felte/reporter-svelte": "^1.1.2",
		"@felte/validator-zod": "^1.0.10",
		"@graphql-codegen/introspection": "^2.1.1",
		"@graphql-yoga/common": "^2.5.0",
		"@prisma/client": "^3.14.0",
		"bcrypt": "^5.0.1",
		"cookie": "^0.5.0",
		"felte": "^1.2.2",
		"graphql": "16.0.0",
		"graphql-modules": "^2.0.0",
		"graphql-tag": "^2.12.6",
		"houdini": "^0.15.5",
		"houdini-common": "^0.13.10",
		"prisma": "^3.14.0",
		"tozod": "^3.0.0",
		"uuid": "^8.3.2",
		"zod": "^3.16.0"
	}
}
